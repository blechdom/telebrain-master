#!/bin/sh

jshint src;
npm test &&
node build.js modules=ALL exclude=gestures &&
cp dist/all.js ../fabricjs.com/lib/fabric.js &&
cp test/unit/*.js ../fabricjs.com/test/unit &&
cd ../fabricjs.com && node build_docs.js && cd ../fabric.js

#
# printio:      node build.js modules=ALL exclude=node,json,gestures no-strict
# fabricjs.com  node build.js modules=ALL exclude=node
#