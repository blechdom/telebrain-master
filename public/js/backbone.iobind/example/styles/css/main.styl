@import 'nib'
@import 'fez'

global-reset()

fez-reset()

black = #373936
white = darken(#fff, 2%)

color1 = #f9d875 // background
color2 = #E64E1C // links
color3 = #AB4C16 // menu links
color4 = #7bb956 // light accent
color5 = #212622 // dark accent

body
  font 12px/21px  "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
  background-color white
  color black

h1, h2, h3, h4, h5
  font-family "Palatino Linotype", "Book Antiqua", Palatino, FreeSerif, serif
  font-weight normal

a
  color color4
  text-decoration none

.fieldset
  clearfix()
  margin 15px
  padding 10px
  border 1px solid darken(white, 35%)
  box-shadow inset 2px 2px 3px darken(white, 6%)
  border-radius 5px
  background #fff
  &.field-text
    label
      display none
    .fieldwrap
      input[type='text']
        font-size 16px
        font-family "Palatino Linotype", "Book Antiqua", Palatino, FreeSerif, serif
        width 100%
        border 0px
        padding 0px
        margin 0px
        outline none
        background none

.page-wrap
  width 400px
  margin 30px auto
  background-color darken(white, 2%)
  border 1px darken(white, 25%) solid
  box-shadow 2px 2px 3px darken(white, 8%)
  
  header
    margin 15px
    text-align center

#TodoForm
  position relative
  #add
    button-shiny()
    cursor pointer
    position absolute
    top 7px
    right 22px

#TodoWrapper
  #TodoList
    overflow hidden
    background-color #fff
    border-top 1px solid darken(white, 35%)
    border-bottom 1px solid darken(white, 35%)
    min-height 50px
    .todo
      clearfix()
      background-color #fff
      position relative
      padding 15px
      border-bottom 1px dotted darken(white, 15%)
      
      &:last-child
        border-bottom none
      
      .button
        float left
        margin-right 5px
        font-size 10px
        padding 0px 10px 0px 6px
        border-radius 3px
        cursor pointer
      
      .complete
        background-color color1
        color black
        position relative
        
        &:hover
          .text
            text-decoration underline
        
        .status
          background-color white
          width 12px
          height 12px
          margin-top 4px
          border-radius 3px
          margin-right 6px
          overflow hidden
          float left
        .check
          position absolute
          top 0px
          left 8px
          display none
        .text
          float left
      
      .delete
        color red
        
        &:hover
          text-decoration underline
      
      &.complete
        h3.title
          text-decoration line-through
          color darken(white, 40%)
        
        .complete .check
          display inline-block

footer
  margin 15px
  text-align center
  
  .branding
    text-transform uppercase
    font-size 10px
    color darken(white, 35%)
    text-shadow 1px 1px 0px white